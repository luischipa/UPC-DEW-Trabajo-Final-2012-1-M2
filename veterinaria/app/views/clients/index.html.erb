<h1>Lista de Clientes</h1>

<%= form_for @search do |f| %>   
 <p>   
<%= f.label :Buscar_por_nombre %>   
<%= f.text_field :name_contains %>   
</p>   
<p class="button"><%= f.submit "Buscar" %> </p>   
<% end %>  


<table WIDTH="675">
  <tr border=1 bgcolor="#F5D0A9">
  <th>DNI</th>
    <th>Nombre</th>
    <th>Email</th>
    <th>Direccion</th>
    <th>Telefono</th>
    <th>Celular</th>
    
  </tr>

<% @clients.each do |client| %>
  <tr>
   <td bgcolor="white"><%= client.codigo %></td>
    <td bgcolor="white"><%= client.name %></td>
    <td bgcolor="white"><%= client.email %></td>
    <td bgcolor="white"><%= client.address %></td>
    <td bgcolor="white"><%= client.phonehome %></td>
    <td bgcolor="white"><%= client.phonecel %></td>
    <td><%= link_to 'Ver', client %></td>
    <td><%= link_to 'Editar', edit_client_path(client) %></td>
    <td><%= link_to 'Eliminar', client, confirm: 'Esta seguro que desea eliminar?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Cliente', new_client_path %>
