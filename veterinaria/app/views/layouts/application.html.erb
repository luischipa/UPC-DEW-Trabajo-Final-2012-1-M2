<!DOCTYPE html>
<html>
<head>
  <title>Veterinaria</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
<div id="container">

	<div id="headerPan">

		<img src="../../../assets/logo.jpg" alt="" name="logo" width="210" height="49" id="logo" />
		<img src="../../../assets/slogan.jpg" alt="" name="logo" width="304" height="179" id="slogan" />

		<ul class="menu">
			<div id="user_nav">
			  <% if current_user %>
				Bienvenido : as <%= current_user.email %>.
				<%= link_to "Log out", log_out_path %>
			  <% else %>
				<%= link_to "Sign up", sign_up_path %> or
				<%= link_to "log in", log_in_path %>
			  <% end %>
			</div>
		</ul>
	</div>

	<div id="contentPan">
		<%= yield %>
	</div>
</div>
</body>
</html>
