<h1>Listing facturas</h1>

<table>
  <tr>
    <th>Cofactura</th>
    <th>Fefactura</th>
    <th>Codigo</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facturas.each do |factura| %>
  <tr>
    <td><%= factura.cofactura %></td>
    <td><%= factura.fefactura %></td>
    <td><%= factura.codigo %></td>
    <td><%= factura.name %></td>
    <td><%= link_to 'Show', factura %></td>
    <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
    <td><%= link_to 'Destroy', factura, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

